<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} %>
  <%= f.input :address, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} %>
  <%= f.input :phone_number, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} %>
  <%= f.input :category, wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'} %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
